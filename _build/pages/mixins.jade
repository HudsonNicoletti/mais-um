mixin cause(image,title,gathered,needed,link)
    .item
        figure
            img(src=image, alt=title)
        p!=title
        .values
            .data.gathered
                span!=gathered
                small Conseguidos
            i.of de
            .data.needed
                span!=needed
                small Necessários
        a.cta(href=link) Doe
        
